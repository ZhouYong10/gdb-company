{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
//    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "$api_bean/*": [
        "../00.api/bean/*"
      ],
      "$api_model/*": [
        "../00.api/model/*"
      ],
      "$api_util/*": [
        "../00.api/util/*"
      ],
      "$api_component/*": [
        "../00.api/component/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
